{
  "layer": "top",
  "position": "top",
  "height": 24,
  "spacing": 5,
  "modules-left": ["hyprland/workspaces","tray"],
  "modules-center": ["clock"],
  "modules-right": ["cpu","memory","battery","disk","pulseaudio","network"],
  
  "cpu": { 
    "interval": 10, 
    "format": "CPU: {usage}% Ôãõ " 
  },
  "memory": {
